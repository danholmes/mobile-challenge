# Podfile
use_frameworks!

target '500pxDemo' do
	use_frameworks!

	# Dependency injecton framework
	pod 'Swinject', 	'~> 2.0.0-beta.2'

	# Object mapping
    pod 'AlamofireObjectMapper', '~> 4.0'

	# Image loading and caching
    pod 'AlamofireImage', '~> 3.1'

    # Networking
    pod 'Alamofire', '~> 4.4'
  
	# UI
	pod 'INSPhotoGallery'

	# Reachability framework in swift
	pod 'ReachabilitySwift', '~> 3.0.0'
end
